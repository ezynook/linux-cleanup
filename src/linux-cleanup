#!/bin/bash
#-------------------
# Author: Pasit Y.
#-------------------
set -o pipefail

Gre='\e[0;32m'
Red='\e[0;31m'
Whi='\e[0;37m'
PATHLOG=("/var/log" "/root/.pm2/logs")

if [ "$(cat /etc/os-release | grep rhel)" ]; then
    OS="rpm"
else
    OS="deb"
fi
echo -e "${Red} Script By${Red} ${Gre}Pasit Y.${Whi}"
echo -e "Package type: ${Gre}${OS}${Whi}"
echo -e "ğŸ—‘ï¸ ${Gre}Checking OS Type${Whi} SUCCESS!"
sleep 3
if [ "$OS" == "deb" ]; then
    apt-get autoremove 2>/dev/null
    rm -rf /var/cache/apt
    apt-get autoclean 2>/dev/null
    rm -rf /var/lib/snapd/snaps
    rm -rf ~/.cache/thumbnails/*
fi
echo -e "ğŸ—‘ï¸ ${Gre}Checking and Clear memory/swap space${Whi} SUCCESS!"
sleep 3
sync; echo -e 3 > /proc/sys/vm/drop_caches
swapoff -a && swapon -a 2>/dev/null
echo -e "ğŸ—‘ï¸ ${Gre}Remove Man${Whi} SUCCESS"
sleep 3
rm -rf /usr/share/man/?? 
rm -rf /usr/share/man/??_*
echo -e "ğŸ—‘ï¸ ${Gre}Delete all .gz and rotated file${Whi} SUCCESS!"
sleep 3
find /var/log -type f -regex ".*\.gz$" | xargs rm -Rf
find /var/log -type f -regex ".*\.[0-9]$" | xargs rm -Rf
echo -e "ğŸ—‘ï¸ ${Gre}Trim log files${Whi}"
find /var -name "*.log" \( \( -size +50M -mtime +7 \) -o -mtime +30 \) -exec truncate {} --size 0 \;
sleep 3
if [ "$OS" == "rpm" ]; then
    yum clean all 2>/dev/null
    rm -rf /var/cache/yum
    rm -rf /var/tmp/yum-*
    echo -e "ğŸ—‘ï¸ ${Gre}Remove old kernels${Whi} SUCCESS!"
    package-cleanup --oldkernels --count=2 -y 2>/dev/null
    echo -e "ğŸ—‘ï¸ ${Gre}Remove the Composer cache${Whi} SUCCESS!"
    rm -rf /root/.composer/cache
    rm -rf /home/*/.composer/cache
fi
echo -e "ğŸ—‘ï¸ ${Gre}Remove Node.js caches${Whi} SUCCESS!"
rm -rf /root/.npm /home/*/.npm /root/.node-gyp /home/*/.node-gyp /tmp/npm-* >/dev/null
sleep 3
echo -e "ğŸ—‘ï¸ ${Gre}Remove Mock caches${Whi}"
rm -rf /var/cache/mock/* /var/lib/mock/* 2>/dev/null
sleep 3
echo -e "ğŸ—‘ï¸ ${Gre}Tail Log Last Proccess${Whi} SUCCESS!"
for i in ${PATHLOG[@]}; do
    if [ ! -d "$i" ]; then
        exit 1
    fi
    for filename in $(find $i -name "*.log"); do
        if [ "${filename##*.}" = "log" ]; then
            tail -n -10 $filename > tmp.txt && mv tmp.txt $filename
            echo -e "ğŸ—‘ï¸ ${Gre}Tail Logs -> ${filename}${Whi}"
        else
            echo -e "ğŸ—‘ï¸ ${Gre}Skipped: Not match logs type... ( ${filename##*.} )${Whi}"
        fi
    done
done
echo -e "${Gre}Cleaned Success all!${Whi}"
sleep 3
clear
exit 0